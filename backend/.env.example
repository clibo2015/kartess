# Database Configuration
# PostgreSQL connection string from Neon (with pooling enabled)
# Replace with your actual database URL
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Authentication
# Secret key for JWT token generation (use a strong random string)
# Generate a secure random string (e.g., using: openssl rand -base64 32)
JWT_SECRET="your-secret-key-here-generate-a-strong-random-string"

# Frontend URL
# Your Vercel frontend URL or local development URL
FRONTEND_URL="http://localhost:3000"
# For production, use: FRONTEND_URL="https://your-app.vercel.app"

# Server Configuration
PORT=3001
NODE_ENV="development"

# Cloudinary Configuration
# Get this from your Cloudinary dashboard (format: cloudinary://api_key:api_secret@cloud_name)
# Sign up at https://cloudinary.com to get your credentials
CLOUDINARY_URL="cloudinary://your-api-key:your-api-secret@your-cloud-name"

# Sentry Monitoring (Optional)
# Get your DSN from Sentry dashboard (https://sentry.io)
# Leave empty if not using Sentry
SENTRY_DSN=""

# Agora Live Streaming (Optional - for live streaming and video calls)
# Get your credentials from https://www.agora.io/
# Leave empty if not using Agora
AGORA_APP_ID=""
AGORA_APP_CERTIFICATE=""

# Web Push Notifications (Optional - for browser push notifications)
# Generate VAPID keys using: npx web-push generate-vapid-keys
# Leave empty if not using web push notifications
VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_EMAIL="mailto:your-email@example.com"

# Trigger.dev Background Jobs (Optional)
# Get your API key from https://trigger.dev/
# Leave empty if not using Trigger.dev
TRIGGER_API_KEY=""

# Socket.io Configuration (Optional)
# If using a separate Socket.io server
# Leave empty to use the same server
SOCKET_SERVER_URL=""
